# AgentPulse Backend Configuration

# Server
PORT=3000
NODE_ENV=development

# Colosseum API
COLOSSEUM_API_BASE=https://agents.colosseum.com/api
AGENT_API_KEY=your_api_key_here
AGENT_ID=503
AGENT_NAME=agentpulse

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/agentpulse

# Redis (Upstash or local)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Claude AI
ANTHROPIC_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-sonnet-4-20250514

# Solana
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
WALLET_PRIVATE_KEY=your_wallet_private_key_base58

# Autonomous Agent Settings
AUTO_POST_ENABLED=true
AUTO_POST_INTERVAL=3600000
DATA_COLLECTION_INTERVAL=300000
QUALITY_THRESHOLD=0.75
MAX_DAILY_POSTS=5
MIN_POST_INTERVAL=3600000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/agentpulse.log

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
VITE_API_URL=https://agentpulse-production-8e01.up.railway.app
